directive @listSize(
  assumedSize: Int
  slicingArguments: [String!]
  sizedFields: [String!]
  requireOneSlicingArgument: Boolean = true
) on FIELD_DEFINITION

input PagingParams {
  limit: Int
  opaqueCursor: String
}

type Query {
  getStrings(paging: PagingParams, defaultLimit: Int): [String]
    @listSize(
      slicingArguments: ["paging { limit }", "paging.limit", "defaultLimit"]
      requireOneSlicingArgument: false
    )
}
